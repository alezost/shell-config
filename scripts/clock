#### HELP MESSAGE ##############################################
hlp='Usage: clock
Start "osd_clock" or kill it if already running.'

if [ "$1" = "-h" ] || [ "$1" = "--help" ]; then
    echo "$hlp"
    exit 0
fi
################################################################

clock_proc=$(pgrep '^osd_clock$')
if [ -z $clock_proc ]; then
    osd_clock --center --middle -i4 -d5 -s4 -F '%H:%M' -c '#BFBF00' \
              -f "-*-ubuntu-bold-r-normal-*-*-3800-*-*-p-*-*"
else
    kill $clock_proc
fi
